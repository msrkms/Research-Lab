@model IEnumerable<Research_Lab.Models.LabUseCost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAuthorizedLab.cshtml";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.minute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.minute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.appUser.AppUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Computer.Cid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a> |
                <a asp-action="GiveDiscount" asp-route-id="@item.id">Give Discount</a> |
            </td>
        </tr>
}
    </tbody>
</table>
