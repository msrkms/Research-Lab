@model Research_Lab.Models.LabUseCost

@{
    ViewData["Title"] = "GiveDiscount";
    Layout = "~/Views/Shared/_LayoutAuthorizedLab.cshtml";
}

<h1>GiveDiscount</h1>

<h4>LabUseCost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GiveDiscount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="UseDate" />
            <input type="hidden" asp-for="hour" />
            <input type="hidden" asp-for="minute" />
            <input type="hidden" asp-for="totalCost" />
            <input type="hidden" asp-for="appUserID" />
            <input type="hidden" asp-for="CId" />
            <div class="form-group">
                <label  class="control-label">Cupon</label>
                <select name="Cupon" class="form-control" asp-items="ViewBag.Cuponlist"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="GiveDiscount" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

